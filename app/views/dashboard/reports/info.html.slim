          td  8
      tr  
        td Центральне опалення
        td -
        td = link_to '0.00', "#central_heating", :role =>"button", 'data-toggle' => "modal"
        - 5.times do
          td  9
      tr  
        td Опалення сходових кліток(ОСК)  
        td -
        td = link_to '0.00', "#staircases_heating", :role =>"button", 'data-toggle' => "modal"
        - 5.times do
          td  10 
      tr
        td -
        td Електроенергія
        td -
        td = link_to '0.00', "#electricity", :role =>"button", 'data-toggle' => "modal"
        - 5.times do
          td  -  
      tr    
        td -
        td Газ
        td -
        td = link_to '0.00', "#gas", :role =>"button", 'data-toggle' => "modal"

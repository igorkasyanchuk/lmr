        td -
        td = link_to '0.00', "#hot_water_abduction", :role =>"button", 'data-toggle' => "modal"
        - 5.times do
          td 5
      tr
        td Постачання підігрітої води
        td -
        td = link_to '0.00', "#hot_water_supply", :role =>"button", 'data-toggle' => "modal"
        - 5.times do
          td 6       
      tr
        td -
        td Гаряча вода
        td -
        td = link_to '0.00', "#hot_water", :role =>"button", 'data-toggle' => "modal"
        - 5.times do
          td  -         
      tr
        td rowspan='4' Центарльне опалення
        td Центарльне опалення
        td -
        td = link_to '0.00', "#central_heating", :role =>"button", 'data-toggle' => "modal"
        - 5.times do
          td  7 
      tr  
        td Абонплата абонента(ПТН)
        td -
        td = link_to '0.00', "#subscriber_fee", :role =>"button", 'data-toggle' => "modal"

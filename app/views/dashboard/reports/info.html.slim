
= title 'Нарахування'


#title_block
  h2.title Нарахування
hr  


= form_tag [:dashboard, :info], :class => 'form-inline', :method => :get, :id => 'select_date_form'  do |f|
  fieldset
    = label_tag 'date_year', 'Рік:', :class => 'someclass'
    = select_year(Date.today, { :start_year => 2000, :end_year => 2012 }, { :class => 'input-small' })
    = label_tag 'date_month', 'Місяць:' 
    = select_month(Date.today, { :use_month_names => %w(Січень Лютий Березень Квітень Травень Червень Липень Серпень Вересень Жовтень Листопад Грудень)},  { :class => 'span2' } )
    = submit_tag "Перейти"

.well Information about user

#reports_table
  table.table.table-striped.table-bordered
    thead
      tr
        th -
        th Послуга  
        th Борг
        th Нараховано
        th Корегування
        th Пільги 
        th Субсидії
        th Оплачено
        th Сальдо
    tbody
      tr
        td -
        td Утримання буд. та прибирання територій
        td -
        td = link_to '0.00', "#house_maintenance", :role =>"button", 'data-toggle' => "modal"
        - 5.times do
          td 1
      tr
        td rowspan='5' Холодна вода  
        td Холодна вода
        td -
        td = link_to '0.00', "#cold_water", :role =>"button", 'data-toggle' => "modal"

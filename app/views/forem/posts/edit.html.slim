= title t("forem.post.new")

= render :partial => 'forem/forums/head', :locals => { :forum => @topic.forum }
h2= t("forem.post.edit")
= simple_form_for [forem, @topic, @post], :html => {:class => 'edit_post form-horizontal'} do |f|
  = render :partial => "form", :locals => { :f => f }
  .form-actions  
    = f.submit t("forem.post.buttons.edit"), :class => 'btn btn-primary'
    |  
    = link_to "Відміна", :back, :class => "btn"
